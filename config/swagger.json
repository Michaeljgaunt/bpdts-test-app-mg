{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BPDTS Example API",
    "description": "Example API to retrieve users living in a city or within a given distance of a city"
  },
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users/{City}": {
      "parameters": [
        {
          "name": "City",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get users that live in a given city or are within a given distance of a city.",
        "responses": {
          "200": {
            "description": "Array of users that are found living in or within distance of the city",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          },
          "400": {
            "description": "The specified city is not supported. (Only London is supported for this example API)"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "id",
        "first_name",
        "last_name",
        "email",
        "ip_address",
        "latitude",
        "longitude"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "uniqueItems": true
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "ip_address": {
          "type": "string"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}